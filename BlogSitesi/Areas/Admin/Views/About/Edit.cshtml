@model AboutViewModel
@{
    ViewBag.AdminTitle = "About Düzenleme Ekranı";
}

@section customAdminScripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

@using (Html.BeginForm("Edit", "About", FormMethod.Post))
{
    @Html.HiddenFor(i => i.Id)

    <div class="form-group">
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.DisplayNameFor(i => i.TitleName)
            </div>
            <div class="col">

                @Html.TextBoxFor(model => model.TitleName, new { @class = "form-control", placeholder = "Başlık giriniz" })
                @Html.ValidationMessageFor(i => i.TitleName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.LabelFor(i => i.AboutDescription)
            </div>
            <div class="col">

                @Html.EditorFor(model => model.AboutDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "İçerik giriniz", required = "required" } })
                @Html.ValidationMessageFor(i => i.AboutDescription, "", new { @class = "text-danger" })

            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Kaydet ve Gönder" class="btn btn-info" />
    </div>


}