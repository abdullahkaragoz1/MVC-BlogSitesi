@model ContactViewModel
@{
    ViewBag.ContactTitle = "Contact Düzenleme Ekranı";
}
@section customAdminScripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}

@using (Html.BeginForm("Edit", "Contact", FormMethod.Post))
{
    @Html.HiddenFor(i => i.Id)

    <div class="form-group">
        <div class="row">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.DisplayNameFor(i => i.FullName)
            </div>
            <div class="col">

                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", placeholder = "Ad giriniz" })
                @Html.ValidationMessageFor(i => i.FullName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.DisplayNameFor(i => i.PhoneNumber)
            </div>
            <div class="col">
                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", placeholder = "İletişim numarası giriniz: " })
                @Html.ValidationMessageFor(i => i.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-2">
                @Html.LabelFor(i => i.EmailAddress)
            </div>
            <div class="col">
                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control", placeholder = "Mail adresi giriniz: " })
                @Html.ValidationMessageFor(i => i.EmailAddress, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Kaydet ve Gönder" class="btn btn-info" />
    </div>
    

}
